<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/rltFragmentProfile"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <android.support.v4.view.ViewPager
        android:clickable="true"
        app:layout_scrollFlags="scroll|snap"
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="245dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/rlProgressDialog"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/colorPrimary"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:elevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6"
                    android:gravity="right"
                    android:layout_marginRight="15dp">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/imgConnecting1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/round1" />
                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/imgConnecting2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/round2" />
                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/imgConnecting3"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:src="@drawable/round3" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/txtProgressing"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:textSize="15dp"
                    android:layout_below="@+id/imgConnecting"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connecting."
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"/>
            </LinearLayout>
        </RelativeLayout>

        <android.support.design.widget.CoordinatorLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:background="@android:color/transparent"
            android:id="@+id/appbar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/NoActionbar"
            app:expanded="false">

            <android.support.v4.view.ViewPager
                android:alpha="0.0"
                android:clickable="true"
                app:layout_scrollFlags="scroll|snap"
                android:id="@+id/viewPager1"
                android:layout_width="match_parent"
                android:layout_height="245dp" />

        </android.support.design.widget.AppBarLayout>

        <com.circle8.circleOne.Utils.StickyScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/frame_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax"
                    app:layout_scrollFlags="snap">

                    <FrameLayout
                        android:alpha="0.8"
                        android:layout_width="match_parent"
                        android:layout_height="245dp"
                        android:background="@color/colorAccent">

                        <ImageView
                            android:id="@+id/imgCard"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/democard" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="1"
                            android:background="#83ced4"
                            android:scaleType="fitXY" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/imgBack"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true" />

                            <com.circle8.circleOne.Utils.cgTextView
                                android:id="@+id/txtprofile"
                                android:textSize="17dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Profile"
                                android:textColor="@color/white"/>

                            <ImageView
                                android:id="@+id/imgProfileMenu"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="22dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_dehaze_black_24dp"/>

                            <LinearLayout
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                            <ImageView
                                android:id="@+id/imgProfileShare"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_profile_white" />

                                <com.circle8.circleOne.Utils.orkebyTextView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Share"
                                    android:textSize="9dp"
                                    android:textColor="@color/white"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                            <ImageView
                                android:id="@+id/ivEditProfile"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_edit_white"/>

                                <com.circle8.circleOne.Utils.orkebyTextView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Edit"
                                    android:textSize="9dp"
                                    android:textColor="@color/white"/>
                            </LinearLayout>

                        </RelativeLayout>

                    </FrameLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp">
                            <de.hdodenhof.circleimageview.CircleImageView
                                app:civ_border_width="0dp"
                                app:civ_border_color="@color/colorPrimary"
                                android:src="@drawable/usr_white1"
                                android:id="@+id/imgProfile"
                                android:layout_width="70dp"
                                android:layout_height="70dp" />

                            <ImageView
                                android:layout_centerInParent="true"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/round_white_profile"
                                />

                        </RelativeLayout>

                        <com.circle8.circleOne.Utils.orkebyBoldTextView
                            android:id="@+id/tvPersonName"
                            android:textSize="17dp"
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:text="Person"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>

                        <com.circle8.circleOne.Utils.orkebyTextView
                            android:id="@+id/tvDesignation"
                            android:textSize="16dp"
                            android:layout_marginTop="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:text="Designation"
                            android:textColor="@color/white"/>
                        <com.circle8.circleOne.Utils.orkebyTextView
                            android:id="@+id/tvCompany"
                            android:textSize="16dp"
                            android:layout_marginTop="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:text="Company"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/llProfileNameBox"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:tint="@color/colorPrimary"
                            android:layout_marginRight="15dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/new_profile1"/>

                        <com.circle8.circleOne.Utils.cgTextView
                            android:id="@+id/tvProfileName"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginBottom="17dp"
                            android:gravity="center"
                            android:text="Profile"
                            android:textAlignment="center"
                            android:textColor="#6b6c6e"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llNameBox"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginRight="20dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_acc_blue"/>

                        <com.circle8.circleOne.Utils.cgTextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Person"
                            android:textAlignment="center"
                            android:textColor="#6b6c6e"
                            android:textSize="13sp" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:id="@+id/imgQR"
                            android:layout_marginLeft="8dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/barcode_scanner1"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llCompanyBox"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginRight="20dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_group_blue"/>

                        <com.circle8.circleOne.Utils.cgTextView
                            android:id="@+id/tvCompanyName"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Company"
                            android:textAlignment="center"
                            android:textColor="#6b6c6e"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llIndustryBox"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginRight="20dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_branding"/>

                        <com.circle8.circleOne.Utils.cgTextView
                            android:id="@+id/textIndustry"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Industry"
                            android:textAlignment="center"
                            android:textColor="#6b6c6e"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llDesignationBox"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginRight="20dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_ceo"/>

                        <com.circle8.circleOne.Utils.cgTextView
                            android:id="@+id/tvDesi"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textColor="#6b6c6e"
                            android:textSize="13sp"
                            android:text="Designation"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llAssociationBox"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginRight="20dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_association"/>

                        <com.circle8.circleOne.Utils.cgTextView
                            android:id="@+id/tvAssociation"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textColor="#6b6c6e"
                            android:textSize="13sp"
                            android:text="Association"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnrMap"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginRight="20dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_location_blue"/>

                        <com.circle8.circleOne.Utils.cgTextView
                            android:id="@+id/tvAddress"
                            android:textColor="#6b6c6e"
                            android:textSize="13sp"
                            android:text="Address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnrWebsite"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginRight="20dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_web_blue"/>

                        <com.circle8.circleOne.Utils.cgTextView
                            android:id="@+id/tvWebsite"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textColor="#6b6c6e"
                            android:textSize="13sp"
                            android:text="www.website.com"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llMailBox"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginRight="20dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_mail_blue"/>

                        <com.circle8.circleOne.Utils.cgTextView
                            android:id="@+id/tvMail"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textColor="#6b6c6e"
                            android:textSize="13sp"
                            android:text="Email Address"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llMailBox1"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginRight="20dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_mail_blue"/>

                        <com.circle8.circleOne.Utils.cgTextView
                            android:id="@+id/tvMail1"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textColor="#6b6c6e"
                            android:textSize="13sp"
                            android:text="Email Address"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnrMob"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginRight="20dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_mob_blue"/>

                        <com.circle8.circleOne.Utils.cgTextView
                            android:id="@+id/tvMob"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textColor="#6b6c6e"
                            android:textSize="13sp"
                            android:text="Personal Phone No."
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnrWork"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginRight="20dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_phone_blue"/>

                        <com.circle8.circleOne.Utils.cgTextView
                            android:id="@+id/tvWork"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textColor="#6b6c6e"
                            android:textSize="13sp"
                            android:text="Work Phone No."
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>


                    <LinearLayout
                        android:tag="sticky"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:background="@color/white"
                            android:id="@+id/tabs1"
                            android:layout_width="match_parent"
                            android:layout_height="40dip"
                            android:orientation="horizontal">

                            <com.facebook.login.widget.LoginButton
                                android:id="@+id/login_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="30dp"
                                android:layout_marginTop="30dp"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/fbUrl"
                                android:layout_marginLeft="30dp"
                                android:layout_weight="1"
                                android:padding="6dp"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@drawable/icon_fb"/>
                            <ImageView
                                android:id="@+id/linkedInUrl"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@drawable/icon_linkedin_gray"/>
                            <ImageView
                                android:id="@+id/twitterUrl"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@drawable/icon_twitter"/>
                            <ImageView
                                android:id="@+id/googleUrl"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@drawable/icon_google"/>
                            <ImageView
                                android:id="@+id/youtubeUrl"
                                android:layout_marginRight="30dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@drawable/icon_utube_gray"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimary"></View>
                    </LinearLayout>
                    <com.circle8.circleOne.Utils.orkebyTextView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp"
                        android:text="Personal Profile"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <com.circle8.circleOne.Utils.orkebyTextView
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:text="Personal Profile Details"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />


                    <com.circle8.circleOne.Utils.orkebyTextView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp"
                        android:text="Company Profile"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <com.circle8.circleOne.Utils.orkebyTextView
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:text="Company Profile Details"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />


                    <com.circle8.circleOne.Utils.orkebyTextView
                        android:id="@+id/lblAttachment"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp"
                        android:text="Attachment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <com.circle8.circleOne.Utils.orkebyTextView
                        android:id="@+id/txtAttachment"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <com.circle8.circleOne.Utils.orkebyTextView
                        android:id="@+id/txtTestLbl"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp"
                        android:text="Testimonial (choose from your contact)"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                        <ImageView
                            android:scaleType="fitEnd"
                            android:layout_toRightOf="@+id/txtTestLbl"
                            android:layout_marginRight="10dp"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/txtMore"
                            android:id="@+id/imgAdd"
                            android:layout_marginLeft="15dp"
                            android:tint="@color/colorPrimary"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@android:drawable/ic_input_add"/>

                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/txtMore"
                        android:layout_marginRight="10dp"
                        android:textAlignment="textEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="More.."
                        android:textColor="@color/colorPrimary"/>
                    </RelativeLayout>

                    <com.circle8.circleOne.Utils.orkebyTextView
                        android:visibility="visible"
                        android:id="@+id/txtTestimonial"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_centerVertical="true"
                        android:textSize="13sp"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <com.circle8.circleOne.Utils.ExpandableHeightListView
                        android:nestedScrollingEnabled="true"
                        android:layout_marginTop="5dp"
                        tools:listitem="@layout/testimonial_row"
                        android:id="@+id/lstTestimonial"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </com.circle8.circleOne.Utils.ExpandableHeightListView>

                    </RelativeLayout>
                    <com.circle8.circleOne.Utils.orkebyTextView
                        android:id="@+id/txtAssociation"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp"
                        android:text="Association"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.circle8.circleOne.Utils.orkebyTextView
                            android:visibility="visible"
                            android:id="@+id/txtNoAssociation"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_centerVertical="true"
                            android:textSize="13sp"
                            android:textColor="@android:color/black"
                            android:text="You do not have any associations"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        android:scrollbarThumbHorizontal="@color/colorPrimary"
                        android:fadeScrollbars="false"
                        android:id="@+id/recyclerAssociation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="horizontal"
                        android:layout_toLeftOf="@+id/imgAddGroupFriend"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="20dp"/>
                        <com.circle8.circleOne.Utils.cgTextView
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtAssociationList"/>
                    </RelativeLayout>
                    <com.circle8.circleOne.Utils.orkebyTextView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp"
                        android:text="Preferred Event Industries"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <RelativeLayout
                        android:layout_marginBottom="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.circle8.circleOne.Utils.orkebyTextView
                            android:visibility="visible"
                            android:id="@+id/txtNoEvent"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_centerVertical="true"
                            android:textSize="13sp"
                            android:textColor="@android:color/black"
                            android:text="You do not have any preferred events"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                        <android.support.v7.widget.RecyclerView
                            android:visibility="gone"
                            android:scrollbarThumbHorizontal="@color/colorPrimary"
                            android:fadeScrollbars="false"
                            android:layout_marginTop="5dp"
                            android:id="@+id/recyclerEvents"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="horizontal"
                            android:layout_toLeftOf="@+id/imgAddGroupFriend"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="20dp"/>
                        <com.circle8.circleOne.Utils.cgTextView
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtEventsListfinal"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </com.circle8.circleOne.Utils.StickyScrollView>

