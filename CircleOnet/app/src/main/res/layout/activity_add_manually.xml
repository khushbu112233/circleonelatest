<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp" />

            <TextView
                android:id="@+id/txtprofile"
                android:textSize="19dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Manually"
                android:textColor="@color/white"/>

        </RelativeLayout>

        <ScrollView
            android:id="@+id/scroll"
            android:layout_below="@+id/lnrRegister"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="35dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_mail_blue" />
                    <com.circle8.circleOne.Utils.HelveticaLightEditText
                        android:id="@+id/etEmail"
                        android:layout_marginTop="3dp"
                        android:textSize="15dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:textColorHint="@android:color/black"
                        android:textColor="@android:color/black"
                        android:hint="* Email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_acc_blue" />
                    <com.circle8.circleOne.Utils.HelveticaLightEditText
                        android:id="@+id/etFirstName"
                        android:textSize="15dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:textColorHint="@android:color/black"
                        android:textColor="@android:color/black"
                        android:hint="* First Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|text"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_acc_blue" />
                    <com.circle8.circleOne.Utils.HelveticaLightEditText
                        android:id="@+id/etLastName"
                        android:textSize="15dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:textColorHint="@android:color/black"
                        android:textColor="@android:color/black"
                        android:hint="* Last Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|text"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_mob_blue" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.circle8.circleOne.Utils.HelveticaLightTextView
                            android:layout_marginTop="3dp"
                            android:textColor="@color/textColor"
                            android:textSize="15dp"
                            android:backgroundTint="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:text="*"
                            android:visibility="gone"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"/>
                        <com.hbb20.CountryCodePicker
                            app:ccp_defaultPhoneCode="65"
                            android:visibility="visible"
                            app:ccpDialog_searchEditTextTint="@color/colorPrimary"
                            app:ccp_textSize="15dp"
                            app:ccpDialog_textColor="@color/colorPrimary"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15dp"
                            app:ccp_showNameCode="false"
                            app:ccp_showPhoneCode="true"
                            app:ccp_contentColor="@color/black"
                            app:ccp_showFlag="false"
                            android:layout_marginRight="2dp"
                            android:id="@+id/ccp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical">
                            <com.circle8.circleOne.Utils.HelveticaLightEditText
                                android:id="@+id/etPhone"
                                android:layout_marginTop="3dp"
                                android:textSize="15dp"
                                android:backgroundTint="@color/colorPrimary"
                                android:textColorHint="@android:color/black"
                                android:textColor="@android:color/black"
                                android:hint="* Phone"
                                android:layout_gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"/>
                            <TextView
                                android:visibility="gone"
                                android:id="@+id/tvPhoneInfo"
                                android:textColor="@color/unselected"
                                android:textSize="10sp"
                                android:text="Enter Phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvMoreInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More Info"
                    android:textSize="19dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:id="@+id/llMoreLay"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_acc_blue" />
                        <com.circle8.circleOne.Utils.HelveticaLightEditText
                            android:id="@+id/etCompany"
                            android:textSize="15dp"
                            android:backgroundTint="@color/colorPrimary"
                            android:textColorHint="@android:color/black"
                            android:textColor="@android:color/black"
                            android:hint="Company"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName|text"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_acc_blue" />
                        <com.circle8.circleOne.Utils.HelveticaLightEditText
                            android:id="@+id/etWebsite"
                            android:textSize="15dp"
                            android:backgroundTint="@color/colorPrimary"
                            android:textColorHint="@android:color/black"
                            android:textColor="@android:color/black"
                            android:hint="Website"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName|text"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_acc_blue" />
                        <com.circle8.circleOne.Utils.HelveticaLightEditText
                            android:id="@+id/etAddress"
                            android:textSize="15dp"
                            android:backgroundTint="@color/colorPrimary"
                            android:textColorHint="@android:color/black"
                            android:textColor="@android:color/black"
                            android:hint="Address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="6"
                            android:inputType="textMultiLine"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnrSubmit"
            android:layout_below="@id/scroll"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@color/colorPrimary"/>
            <TextView
                android:gravity="center"
                android:textSize="17dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ADD"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

    </LinearLayout>

</layout>