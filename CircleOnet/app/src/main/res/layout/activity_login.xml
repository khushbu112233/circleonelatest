<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amplearch.circleonet.Activity.LoginActivity">

    <ImageView
        android:layout_weight="1"
        android:layout_gravity="center"
        android:id="@+id/imgLogin"
        android:src="@drawable/loginlogo"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_width="190dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:weightSum="3"
        android:id="@+id/lnrLogin"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/imgLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textColor="@color/white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/edit_back"
            android:hint="Username"
            android:textColorHint="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textColor="@color/white"
            android:drawableRight="@drawable/question"
            android:paddingRight="20dp"
            android:layout_marginTop="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/edit_back"
            android:hint="Password"
            android:textColorHint="@color/white"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:id="@+id/btnLogin"
            android:textSize="16dp"
            android:textAllCaps="false"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="Login"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    <View
        android:id="@+id/viewLogin"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/lnrLogin"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"></View>

        <Button
            android:id="@+id/btnRegister"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lnrBottom"
            android:layout_below="@+id/viewLogin"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="28dp"
            android:text="Register"
            android:textAllCaps="false"
            android:textSize="16dp" />

        <LinearLayout
        android:id="@+id/lnrBottom"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fbLogin"
            android:layout_marginRight="25dp"
            android:src="@drawable/icon_fb"
            android:layout_width="28dp"
            android:layout_height="28dp" />

            <com.facebook.login.widget.LoginButton
                android:visibility="gone"
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp" />

        <ImageView
            android:layout_marginRight="25dp"
            android:src="@drawable/icon_linkedin"
            android:layout_width="28dp"
            android:layout_height="28dp" />

        <ImageView
            android:layout_marginRight="25dp"
            android:src="@drawable/icon_twitter"
            android:layout_width="28dp"
            android:layout_height="28dp" />

        <ImageView
            android:src="@drawable/icon_google"
            android:layout_width="28dp"
            android:layout_height="28dp" />
    </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
