<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d5e3e1"
    tools:context=".Activity.PromotionActivity">

    <RelativeLayout
        android:elevation="15dp"
        android:id="@+id/rlTabBar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorAccent" >
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/imgBack"
            android:layout_marginLeft="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <com.circle8.circleOne.Utils.cgTextView
            android:id="@+id/txtTitle"
            android:textSize="17dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Promotion"
            android:textColor="@color/white"/>



    </RelativeLayout>


    <ImageView
        android:layout_below="@+id/rlTabBar"
        android:src="@drawable/promo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/imgProceed"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="18dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>