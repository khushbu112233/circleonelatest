<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amplearch.circleonet.Activity.EventsActivity">

    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/lnrSearch"
        android:layout_below="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <AutoCompleteTextView
            android:layout_centerVertical="true"
            android:background="@drawable/txt_back"
            android:paddingRight="10dp"
            android:layout_toLeftOf="@+id/imgSearch"
            android:paddingLeft="10dp"
            android:hint="Search"
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusableInTouchMode="true"
            android:imeOptions="actionSearch"
            android:inputType="textAutoComplete|textAutoCorrect"
            android:textColor="@android:color/black" />

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/colorAccent"
            android:src="@drawable/search"
            android:id="@+id/imgSearch"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_below="@+id/lnrSearch"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"></View>

    <ScrollView
        android:layout_above="@+id/view1"
        android:layout_below="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:backgroundTint="@color/colorAccent"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/drawer1"
                    android:src="@drawable/ic_search_name"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="Home!"
                    android:layout_marginTop="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search by Name"
                    android:id="@+id/textDrawer1"
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorAccent" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:backgroundTint="@color/colorAccent"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/drawer2"
                    android:src="@drawable/ic_group_blue1"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="Home!"
                    android:layout_marginTop="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search by Company Name"
                    android:id="@+id/textDrawer2"
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorAccent" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:backgroundTint="@color/colorAccent"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/drawer3"
                    android:src="@drawable/ic_ceo"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="Home!"
                    android:layout_marginTop="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search by Title"
                    android:id="@+id/textDrawer3"
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorAccent" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:backgroundTint="@color/colorAccent"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/drawer4"
                    android:src="@drawable/ic_branding"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="Home!"
                    android:layout_marginTop="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search by Industry"
                    android:id="@+id/textDrawer4"
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorAccent" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:backgroundTint="@color/colorAccent"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/drawer5"
                    android:src="@drawable/ic_association"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="Home!"
                    android:layout_marginTop="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search by Association"
                    android:id="@+id/textDrawer5"
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorAccent" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <View
        android:layout_above="@+id/lnrBottomTab"
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"></View>

    <LinearLayout
        android:id="@+id/lnrBottomTab"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgCards"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:padding="14dp"
            android:src="@drawable/ic_icon1" />

        <ImageView
            android:id="@+id/imgConnect"
            android:padding="14dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_icon2"/>
        <ImageView
            android:id="@+id/imgEvents"
            android:padding="14dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_icon3"/>
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_marginRight="20dp"
            android:padding="14dp"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_icon4"/>
    </LinearLayout>
</RelativeLayout>
