<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:alpha="0.8"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/imgCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/democard" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1"
            android:background="#83ced4"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:visibility="gone"
                android:id="@+id/imgBack"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <com.circle8.circleOne.Utils.cgTextView
                android:id="@+id/txtprofile"
                android:textSize="17dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/imgProfileMenu"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="22dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_dehaze_black_24dp"/>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp">
                    <FrameLayout
                        android:id="@+id/fm_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <de.hdodenhof.circleimageview.CircleImageView
                            app:civ_border_width="0dp"
                            app:civ_border_color="@color/colorPrimary"
                            android:src="@drawable/usr_white1"
                            android:id="@+id/imgProfile"
                            android:layout_width="70dp"
                            android:layout_height="70dp" />

                        <ProgressBar
                            android:id="@+id/progressBar1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:visibility="gone"
                            android:layout_gravity="center"
                            />
                    </FrameLayout>

                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/round_white_profile" />

                </RelativeLayout>
                <com.circle8.circleOne.Utils.orkebyBoldTextView
                    android:id="@+id/tvPersonName"
                    android:textSize="17dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:text="Person"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <com.circle8.circleOne.Utils.orkebyTextView
                    android:id="@+id/tvDesignation"
                    android:textSize="16dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:text="Designation"
                    android:textColor="@color/white"/>
                <com.circle8.circleOne.Utils.orkebyTextView
                    android:id="@+id/tvCompany"
                    android:textSize="16dp"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:text="Company"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgProfileShare"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_profile_white" />
                <com.circle8.circleOne.Utils.orkebyTextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:textSize="9dp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivEditProfile"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_edit_white"/>

                <com.circle8.circleOne.Utils.orkebyTextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textSize="9dp"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>

</layout>