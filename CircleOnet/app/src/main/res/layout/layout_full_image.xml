<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="500dp"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/frame_card8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_marginLeft="5dp">
        <com.circle8.circleOne.Utils.TouchImageView
            android:id="@+id/img_receipt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:src="@drawable/ic_gold_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt8"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:visibility="invisible"
                android:text="10"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/img8"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:tint="@color/black"
                android:src="@drawable/ic_logo_white"/>
            <TextView
                android:id="@+id/txtpoint8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CirclOne Points"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="11sp"
                android:layout_gravity="center"/>
        </LinearLayout>

    </FrameLayout>

    <Button
        android:id="@+id/btn_dissmiss"
        android:text="Close"
        android:layout_margin="5dp"
        android:background="@color/golden"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_height="40dp" />
</FrameLayout>
