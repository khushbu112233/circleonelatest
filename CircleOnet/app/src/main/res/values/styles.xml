    <style name="PauseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeut</item>
    </style>

    <style name="ThemeDialog" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="MyCustomPickerTheme" parent="MultiContactPicker.Azure">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="mcpToolbarTheme">@style/MyCustomToolbarTheme</item>
        <item name="mcpListPopupWindowStyleTheme">@style/MyCustomToolbarTheme</item>
    </style>

    <style name="MyCustomToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
    </style>


    <style name="CustomPopupTheme" parent="ThemeOverlay.AppCompat.Dark">
        <!-- if using android.widget.PopupMenu -->
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <!-- if using android.support.v7.widget.PopupMenu -->
        <item name="popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Blue_AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:popupAnimationStyle">@null</item>
    </style>

    <style name="MultiContactPicker.Azure" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/azureColorPrimary</item>
        <item name="colorPrimaryDark">@color/azureColorPrimaryDark</item>
        <item name="mcpToolbarTheme">@style/Toolbar.Azure</item>
        <item name="mcpListPopupWindowStyleTheme">@style/Popup.Azure</item>
    </style>

    <style name="Toolbar.Azure" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="Popup.Azure" parent="Widget.AppCompat.Light.ListPopupWindow">

    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/century_gothic_1361531616</item>
        <item name="android:textColor">@color/white</item>
        <!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">30dp</item><!-- item size in menu-->
        <item name="listPreferredItemHeightSmall">30dp</item><!-- item size in menu-->
        <item name="android:listDivider">@android:color/transparent</item>
    </style>

</resources>
